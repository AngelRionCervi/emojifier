{% extends 'base.html.twig' %}

{% block title %}Reset password{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mb-5 mt-5">Modify your password</h1>
        <div class="bloc-beige col-8 offset-2 justify-content-center">
            <div class="row justify-content-center">
                <div class="col-8 text-center">
                    {{ form_start(form) }}
                    <div class="mt-3">
                    {{ form_row(form.username) }}
                    </div>
                    <div class="mt-3">
                    {{ form_row(form.password.first) }}
                    </div>
                    <div class="mt-3">
                    {{ form_row(form.password.second) }}
                    </div>
                </div>
            </div>
            <div class="row justify-content-center mt-4">
                <button class="button_save_image">Validate</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
